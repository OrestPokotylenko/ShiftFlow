<UserControl x:Class="UI.SecondaryViews.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:UI.SecondaryViews" 
             xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:ProfileVM/>
    </UserControl.DataContext>

    <Grid Background="{StaticResource Color3}">

        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel Width="850"
                        Margin="50,50,0,0">

                <Border Style="{StaticResource ProfileBorderStyle}">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Full name:"
                                   Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                   Padding="0" 
                                   Margin="50,0,0,0" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding}"
                                   Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                   HorizontalAlignment="Right"
                                   Margin="0,0,50,0" />

                    </Grid>

                </Border>

                <StackPanel Margin="0,0,0,100">

                    <DockPanel>

                        <Border Style="{StaticResource ProfileBorderStyle}"
                                Margin="0">

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Email address:"
                                           Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                           Padding="0" 
                                           Margin="50,0,0,0" />

                                <TextBlock Grid.Column="1"
                                           Text="{Binding}"
                                           Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                           HorizontalAlignment="Right"
                                           Margin="0,0,50,0" />

                            </Grid>

                        </Border>

                        <Button Style="{StaticResource DropDownButtonStyle}" 
                                Click="DropDown_Click"
                                Tag="{Binding ElementName=EmailDockPanel}" />

                    </DockPanel>

                    <DockPanel x:Name="EmailDockPanel"
                               Visibility="Collapsed"
                               Opacity="0"
                               Margin="0,-50,0,0">

                        <TextBox x:Name="txtEmail"
                                 Width="500"
                                 Height="35"
                                 DockPanel.Dock="Left"
                                 Margin="80,50,0,0" />

                        <Button Content="Apply" 
                                Width="100"
                                Height="35"
                                Margin="70,50,0,0" />

                    </DockPanel>

                </StackPanel>

                <StackPanel Margin="0,0,0,100">

                    <DockPanel>

                        <Border Style="{StaticResource ProfileBorderStyle}"
                                Margin="0">

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Phone number:"
                                           Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                           Padding="0" 
                                           Margin="50,0,0,0" />

                                <TextBlock Grid.Column="1"
                                           Text="{Binding}"
                                           Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                           HorizontalAlignment="Right"
                                           Margin="0,0,50,0" />

                            </Grid>

                        </Border>

                        <Button Style="{StaticResource DropDownButtonStyle}" 
                                Click="DropDown_Click"
                                Tag="{Binding ElementName=NumberDockPanel}" />

                    </DockPanel>

                    <DockPanel x:Name="NumberDockPanel"
                               Visibility="Collapsed"
                               Opacity="0"
                               Margin="0,-50,0,0">

                        <TextBox x:Name="txtPhoneNumber"
                                 Width="500"
                                 Height="35"
                                 DockPanel.Dock="Left"
                                 Margin="80,50,0,0" />

                        <Button Content="Apply" 
                                Width="100"
                                Height="35"
                                Margin="70,50,0,0" />

                    </DockPanel>

                </StackPanel>

                <StackPanel Margin="0,0,0,100">

                    <DockPanel>

                        <Border Style="{StaticResource ProfileBorderStyle}"
                                Margin="0">

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                       Text="Password:"
                                       Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                       Padding="0" 
                                       Margin="50,0,0,0" />

                                <TextBlock Grid.Column="1"
                                           Text="{Binding}"
                                           Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                           HorizontalAlignment="Right"
                                           Margin="0,0,50,0" />

                            </Grid>

                        </Border>

                        <Button Style="{StaticResource DropDownButtonStyle}" 
                                Click="DropDown_Click"
                                Tag="{Binding ElementName=PasswordDockPanel}" />

                    </DockPanel>

                    <DockPanel x:Name="PasswordDockPanel"
                               Visibility="Collapsed"
                               Opacity="0"
                               Margin="0,-50,0,0">

                        <StackPanel>

                            <TextBox x:Name="txtPassword"
                                 Width="500"
                                 Height="35"
                                 Margin="80,50,0,0" />

                            <PasswordBox x:Name="txtPasswordRepeat"
                                 Width="500"
                                 Height="35"
                                 Margin="80,50,0,0" />

                        </StackPanel>

                        <Button Content="Apply" 
                                Width="100"
                                Height="35"
                                Margin="70,50,0,0" />

                    </DockPanel>

                </StackPanel>

                <Border Style="{StaticResource ProfileBorderStyle}">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Employee number:"
                                   Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                   Padding="0" 
                                   Margin="50,0,0,0" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding}"
                                   Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                   HorizontalAlignment="Right"
                                   Margin="0,0,50,0" />

                    </Grid>

                </Border>

                <Border Style="{StaticResource ProfileBorderStyle}">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Occupation:"
                                   Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                   Padding="0" 
                                   Margin="50,0,0,0" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding}"
                                   Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                   HorizontalAlignment="Right"
                                   Margin="0,0,50,0"/>

                    </Grid>

                </Border>

                <Border Style="{StaticResource ProfileBorderStyle}">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Contract type:"
                                   Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                   Padding="0" 
                                   Margin="50,0,0,0"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding}"
                                   Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                   HorizontalAlignment="Right"
                                   Margin="0,0,50,0"/>

                    </Grid>

                </Border>

                <Border Style="{StaticResource ProfileBorderStyle}"
                        Margin="0,0,0,50">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Employment start:"
                                   Style="{StaticResource HomeViewLeftSecondHederStyle}" 
                                   Padding="0" 
                                   Margin="50,0,0,0"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding}"
                                   Style="{StaticResource HomeViewSecondHeaderStyle}" 
                                   HorizontalAlignment="Right"
                                   Margin="0,0,50,0"/>

                    </Grid>

                </Border>

            </StackPanel>

        </ScrollViewer>

    </Grid>

</UserControl>